<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="it.fescacom.service"/>

    <bean id="driver" class="org.openqa.selenium.firefox.FirefoxDriver"
          destroy-method="quit">
    </bean>

    <bean id="driverHandler" class="it.fescacom.service.dataFetch.driver.DriverHandler"/>

    <context:property-placeholder location="classpath:fetcher.properties"/>

</beans>